<div class="card card-body bg-light">
    <div class="card-header mb-3">Добавяне на нова заявка</div>
    <form action="/reports" method="POST">
        <div class="form-group">
            <label for="model">Модел на у-во</label>
            <input type="text" name="model" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="sn">Сериен номер</label>
            <input type="text" name="sn" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="warranty">Гаранция - Да/Не</label>
            <input type="text" name="warranty" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="defectText">Дефект</label>
            <textarea class="form-control" id="defectText" rows="3" name="defectText" required></textarea>
        </div>
        <div class="form-group">
            <label for="partsText">Части</label>
            <textarea class="form-control" id="partsText" rows="3" name="partsText" required></textarea>
        </div>
        <div class="form-group">
            <label for="client">Клиент</label>
            <input type="text" name="client" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="reportDate">Дата на заявка</label>
            <input id="reportDate" name="reportDate" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="endDate">Дата на предаване</label>
            <input id="endDate" name="endDate" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="notes">Забележка</label>
            <textarea class="form-control" id="notes" rows="5" name="notes" required></textarea>
        </div>

        <button class="btn btn-primary" type="submit">Изпрати</button>
    </form>
</div>